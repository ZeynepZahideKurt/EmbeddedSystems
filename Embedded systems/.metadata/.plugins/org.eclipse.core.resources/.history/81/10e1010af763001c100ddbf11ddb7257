//IO��������(SDA)
/*********xxxxxxxxxxxxxx*************/
void SDA_IN()  
{ 
	/*GPIO_InitTypeDef GPIO_InitStructure;
	GPIO_InitStructure.GPIO_Pin =GPIO_Pin_4;
	GPIO_InitStructure.GPIO_Mode = GPIO_Mode_IPU ;
 	GPIO_Init(GPIOC, &GPIO_InitStructure);*/

	GPIO_InitTypeDef GPIO_InitStruct = {0};

	  /* GPIO Ports Clock Enable */
	  __HAL_RCC_GPIOC_CLK_ENABLE();
	  __HAL_RCC_GPIOH_CLK_ENABLE();
	  __HAL_RCC_GPIOB_CLK_ENABLE();
	  __HAL_RCC_GPIOA_CLK_ENABLE();

	  /*Configure GPIO pin : IIC_SDA_Pin */
	  GPIO_InitStruct.Pin = IIC_SDA_Pin;
	  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
	  GPIO_InitStruct.Pull = GPIO_NOPULL;
	  HAL_GPIO_Init(IIC_SDA_GPIO_Port, &GPIO_InitStruct);
}
void SDA_OUT()
{ 
	/*GPIO_InitTypeDef GPIO_InitStructure;
	GPIO_InitStructure.GPIO_Pin = GPIO_Pin_4;
	GPIO_InitStructure.GPIO_Mode = GPIO_Mode_Out_PP ;   //�������
	GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
	GPIO_Init(GPIOC, &GPIO_InitStructure);
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);*/

	GPIO_InitTypeDef GPIO_InitStruct = {0};

	  /* GPIO Ports Clock Enable */
	  __HAL_RCC_GPIOC_CLK_ENABLE();
	  __HAL_RCC_GPIOH_CLK_ENABLE();
	  __HAL_RCC_GPIOB_CLK_ENABLE();
	  __HAL_RCC_GPIOA_CLK_ENABLE();

	  /*Configure GPIO pin Output Level */
	  HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, GPIO_PIN_RESET);

	  /*Configure GPIO pin : IIC_SDA_Pin */
	  GPIO_InitStruct.Pin = IIC_SDA_Pin;
	  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
	  GPIO_InitStruct.Pull = GPIO_NOPULL;
	  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
	  HAL_GPIO_Init(IIC_SDA_GPIO_Port, &GPIO_InitStruct);

}


//����IIC��ʼ�ź�
void IIC_Start(void)
{
	SDA_OUT();     //sda�����
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);	//  HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);

	for(i=0; i<4; i++){
				_delay_us(); //_delay_us(100);
			}
	//delay_us(4);
 	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 0);//START:when CLK is high,DATA change form high to low

 	for(i=0; i<4; i++){
 				_delay_us();
 			}//delay_us(4);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);//ǯסI2C���ߣ�׼�����ͻ��������
}	  
//����IICֹͣ�ź�
void IIC_Stop(void)
{
	SDA_OUT();//sda�����
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 0);//STOP:when CLK is high DATA change form low to high
 	//delay_us(4);
 	for(i=0; i<4; i++){
 				_delay_us();
 			}
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);//����I2C���߽����ź�
	for(i=0; i<4; i++){
	 				_delay_us();
	 			}//delay_us(4);
}
//�ȴ�Ӧ���źŵ���
//����ֵ��1������Ӧ��ʧ��
//        0������Ӧ��ɹ�
/*********xxxx�޸ĳ�ʱʱ��************/
u8 IIC_Wait_Ack(void)
{
	u8 ucErrTime=0;
	SDA_IN();      //SDA����Ϊ����  
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);delay_us(3);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);delay_us(3);
	while(HAL_GPIO_ReadPin(IIC_SDA_GPIO_Port, IIC_SDA_Pin) )
	{
		ucErrTime++;
		if(ucErrTime>250)
		{
			printf("��ʱ\n");
			IIC_Stop();
			return 1;
		}
	}
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);//ʱ�����0
	return 0;  
} 
//����ACKӦ��
void IIC_Ack(void)
{
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
	SDA_OUT();
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 0);
	for(i=0; i<2; i++){
	 				_delay_us();
	 			}//delay_us(2);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);
	for(i=0; i<2; i++){
		 				_delay_us();
		 			}//delay_us(2);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
}
//������ACKӦ��		    
void IIC_NAck(void)
{
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
	SDA_OUT();
	HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);
	for(i=0; i<2; i++){
		 				_delay_us();
		 			}//delay_us(2);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);
	for(i=0; i<2; i++){
		 				_delay_us();
		 			}//delay_us(2);
	HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
}					 				     
//IIC����һ���ֽ�
//���شӻ�����Ӧ��
//1����Ӧ��
//0����Ӧ��			  
void IIC_Send_Byte(u8 txd)
{                        
    u8 t;   
		SDA_OUT(); 	    
    HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);//����ʱ�ӿ�ʼ���ݴ���
    for(t=0;t<8;t++)
    {              
		if((txd&0x80)>>7)
			HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 1);
		else
			HAL_GPIO_WritePin(IIC_SDA_GPIO_Port, IIC_SDA_Pin, 0);
		txd<<=1; 	  
		for(i=0; i<2; i++){
			 				_delay_us();
			 			}//delay_us(2);   //��TEA5767��������ʱ���Ǳ����
		HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);
		for(i=0; i<2; i++){
			 				_delay_us();
			 			}//delay_us(2);
		HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
		for(i=0; i<2; i++){
			 				_delay_us();
			 			}//delay_us(2);
    }	 
} 	    
//��1���ֽڣ�ack=1ʱ������ACK��ack=0������nACK   
u8 IIC_Read_Byte(unsigned char ack)
{
	unsigned char i,receive=0;
	SDA_IN();//SDA����Ϊ����
  for(i=0;i<8;i++ )
	{
        HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 0);
        for(i=0; i<100; i++){
        	 				_delay_us();
        	 			}//delay_us(100);
		HAL_GPIO_WritePin(IIC_SCL_GPIO_Port, IIC_SCL_Pin, 1);
        receive<<=1;
        if(HAL_GPIO_ReadPin(IIC_SDA_GPIO_Port, IIC_SDA_Pin) )receive++;
        for(i=0; i<100; i++){
        	 				_delay_us();
        	 			}//delay_us(100);
    }					 
    if (!ack)
        IIC_NAck();//����nACK
    else
        IIC_Ack(); //����ACK   
    return receive;
}



