#define VREFINT_CAL_ADDR			0x1FF80078
#define VREFINT_CAL 				((uint16_t*) VREFINT_CAL_ADDR)
#define MAX_VOLTAGE					3000.0
uint32_t VREFINTADC;
uint32_t ADC_raw;
float Vdd;

char buffer[23];
/* USER CODE END PD */

