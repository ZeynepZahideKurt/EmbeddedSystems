#define	ClrSDIO()	(HAL_GPIO_WritePin(SDIO_GPIO_Port, SDIO_Pin, 0))

#define	SDIO_H()	(HAL_GPIO_ReadPin(SDIO_GPIO_Port, SDIO_Pin) == 1)
#define	SDIO_L()	(HAL_GPIO_ReadPin(SDIO_GPIO_Port, SDIO_Pin) == 0)





   /* SHT30 DENEME1
